<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/passwords_fragment">

    <include
        layout="@layout/app_bar_main"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/relativeLayout">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="normal"
            android:textSize="15sp"
            android:text="Anjali"
            android:paddingRight="9dp"
            android:paddingBottom="-7dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/pass_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#bdbdbd"
                android:text="E-mail"
                android:paddingRight="7dp"
                android:visibility="gone"
                android:layout_below="@+id/pass_title"
                android:layout_marginLeft="20dp"
                android:id="@+id/pass_password"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#bdbdbd"
                android:text="lo"
                android:paddingRight="7dp"
                android:layout_below="@+id/pass_title"
                android:layout_marginLeft="20dp"
                android:id="@+id/categoryadapter"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/view" />

        <ImageView
            android:id="@+id/editImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/deleteImageView"
            android:layout_alignTop="@+id/deleteImageView"
            android:layout_marginEnd="39dp"
            android:layout_toStartOf="@+id/deleteImageView"
            app:srcCompat="@drawable/pencil" />

        <ImageView
            android:id="@+id/deleteImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_alignEnd="@+id/view"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_marginEnd="39dp"

            app:srcCompat="@drawable/delete" />


    </RelativeLayout>

</RelativeLayout>